<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco del item -->
    <solid android:color="#FFFFFF" />

    <!-- Borde del item -->
    <stroke
        android:width="2dp"
        android:color="@color/dark_blue" /> <!-- Color gris claro para el borde -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="8dp" />

    <!-- Un margen de padding interno para el contenido -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>